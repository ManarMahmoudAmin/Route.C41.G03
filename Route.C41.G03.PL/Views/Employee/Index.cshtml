@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";

    string VDataMessage = ViewData["Message"] as string;
    string VBagMessage = ViewBag.Message;
}
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@*
<div class="alert alert-secondary">
@ViewData["Message"]
</div>
*@

<div class="alert alert-warning">
    @ViewBag.Message
</div>

<h1>All Employees</h1>
<br />
<br />

<a asp-asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />

@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.Salary</td>
                    <td>@employee.HiringDate</td>
                    <td>@employee.IsActive</td>

                    <td>
                        <a asp-asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}