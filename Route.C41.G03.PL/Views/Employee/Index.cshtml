@if (Model.Count() > 0)
{
    <h1>All Employees</h1>
    <br />
    <br />
    <a asp-asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>
    <br />


    ///<div class="mt-3">
    ///    <form class="row col-8 offset-2" asp-action="Index">
    ///        <div class="col-8">
    ///
    ///            <input type="text" class="form-control" name="ValueName" placeholder="Write Employee's Name'" />
    ///
    ///        </div>
    ///
    ///        <div class="col-4">
    ///            <input type="submit" class="btn btn-success" value="Search" />
    ///        </div>
    ///    </form>
    ///</div>
    <br />
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <td>@Html.DisplayNameFor(E => E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                <td>@Html.DisplayNameFor(E => E.Address)</td>
                <td>@Html.DisplayNameFor(E => E.Gender)</td>
                <td>@Html.DisplayNameFor(E => E.Salary)</td>
                <td>@Html.DisplayNameFor(E => E.Department)</td>
                <td>@Html.DisplayNameFor(E => E.IsActive)</td>
                <td>@Html.DisplayNameFor(E => E.PhoneNumber)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>

        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@employee.ImageName" alt="Employee Image" class="img-fluid w-50 rounded-circle" />
                    </td>
                    <td>@employee.Name</td>
                    <td>@Html.DisplayFor(E => employee.Email)</td>
                    <td>@employee.Address</td>
                    <td>@employee.Gender</td>
                    <td>@Html.DisplayFor(E => employee.Salary)</td>
                    <td>@Html.DisplayFor(E => employee.Department.Name)</td>
                    <td>
                        @if (employee.IsActive == true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>

                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>
                        }

                    </td>
                    <td>@Html.DisplayFor(E => employee.PhoneNumber)</td>

                    <partial name="_ButtonParitialView" model="@employee.Id" />

                </tr>

            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> There is No Employees</h3>
    </div>

}